<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:background="@color/hs__chat_bubble_separator_light"
    tools:context=".MainActivity">

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/text"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/hs__light_windowBackground"
        android:text="This is a sample App which shows how to use the GCMLibrary"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"/>

  <TextView
      android:layout_centerInParent="true"
      android:textSize="15sp"
      android:gravity="center"
      android:textColor="@color/hs__light_windowBackground"
      android:text="by Abhishek Nandi"
      android:layout_width="wrap_content"
      android:id="@+id/text"
      android:layout_height="wrap_content"/>

    <ImageView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/github"
        android:layout_height="wrap_content"/>
</RelativeLayout>
